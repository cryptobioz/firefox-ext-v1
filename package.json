{
  "title": "Wallabag",
  "name": "wallabag",
  "id": "poche@gaulupeau.fr",
  "version": "2.0.0",
  "description": "Post URL to Wallabag",
  "main": "index.js",
  "author": "Alda Marteau-Hardi",
  "permissions": {
    "private-browsing": true
  },
  "engines": {
    "firefox": ">=38.0a1"
  },
  "license": "GPLv3",
  "preferences": [
    {
        "name": "wallabagUrl",
        "title": "Wallabag URL",
        "type": "string",
        "value": ""
    },
    {
        "name": "wallabagWidth",
        "title": "Window width",
        "type": "integer",
        "value": 600
    },
    {
        "name": "wallabagHeight",
        "title": "Window height",
        "type": "integer",
        "value": 530
    },
    {
        "name": "wallabagOpenTab",
        "title": "Open a tab instead of a dialog window.",
        "type": "bool",
        "value": false
    },
    {
        "name": "wallabagAutoclose",
        "title": "Allow wallabag to close dialog window automatically.",
        "type": "bool",
        "value": true
    },
    {
        "name": "wallabagShortcutKey",
        "title": "Shortcut key",
        "description": "Shortcut will be accel-alt-(chosen key value)",
        "type": "string",
        "value": "s"
    }
  ]
}
